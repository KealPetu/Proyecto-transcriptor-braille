# Backend Configuration (.env)

# Ambiente (development, production, testing)
ENVIRONMENT=development

# Debug mode
DEBUG=False

# API Configuration
API_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost", "http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO

# LÃ­mites
MAX_TEXT_LENGTH=10000
MAX_BRAILLE_CELLS=10000
